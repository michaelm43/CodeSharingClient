<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="5.0" stylesheets="@LayoutForm.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Choose file from the list" />
      <ComboBox fx:id="cbFileNames" prefWidth="150.0" />
      <HBox>
         <children>
            <Button fx:id="btncancel" mnemonicParsing="false" onAction="#cancel" text="cancel" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnOpen" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#openFile" text="open" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
