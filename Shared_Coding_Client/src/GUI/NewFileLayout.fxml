<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<BorderPane stylesheets="@FormLayout.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Main">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="txtFileName" text="enter file name" />
            <TextField fx:id="lblEmail" text="Application" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnOpen" mnemonicParsing="false" onAction="#OpenPageAction" text="existing file" />
            <Region HBox.hgrow="ALWAYS">
               <cursor>
                  <Cursor fx:constant="H_RESIZE" />
               </cursor>
            </Region>
            <Button id="btnLogin" fx:id="btnOK" alignment="CENTER_RIGHT" contentDisplay="CENTER" mnemonicParsing="false" onAction="#NewFileAction" text="OK" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
